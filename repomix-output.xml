    <style>
      /* --- GLOBAL STYLES --- */
      :root {
        --bg-start: #1a233c; /* Deep Blue */
        --bg-end: #2c3e50; /* Dark Slate Gray */
        --primary: #ffc857; /* Soft Yellow */
        --accent: #f39c12; /* Orange/Yellow Accent */
        --text-primary: #eaecef; /* Off-white */
        --text-secondary: #ced4da; /* Light Gray */
        --danger: #dc3545; /* Red */
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI",
          Roboto, Helvetica, Arial, sans-serif;
      }

      body {
        background: linear-gradient(
          145deg,
          var(--bg-start) 0%,
          var(--bg-end) 100%
        );
        color: var(--text-primary);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        overflow-x: hidden;
      }

      a {
        color: var(--primary);
        text-decoration: none;
        transition: color 0.2s;
      }

      a:hover {
        color: var(--accent);
      }

      /* --- UTILITY COMPONENTS (RunItUp Style) --- */

      .glass-card {
        background-color: rgba(
          255,
          255,
          255,
          0.05
        ); /* Semi-transparent white */
        border-radius: 24px; /* Consistent rounded corners */
        border: 1px solid rgba(255, 255, 255, 0.18); /* Light border */
        backdrop-filter: blur(10px); /* Glass effect */
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
      }

      .custom-button {
        display: flex; /* CHANGED: Use flex for icon alignment */
        justify-content: center; /* Center content horizontally */
        align-items: center; /* Center content vertically */
        background-color: var(--primary);
        color: var(--bg-end); /* Text color is dark slate gray */
        padding: 15px 30px;
        border-radius: 25px;
        font-size: 18px;
        font-weight: bold;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.2s, transform 0.1s;
        margin: 10px 0;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        width: 100%; /* Make buttons full width in their container */
      }

      .custom-button:hover {
        background-color: var(--accent);
        transform: translateY(-2px);
      }

      /* NEW: Style for the app store icons inside the button */
      .store-icon {
        width: 28px; /* Slightly larger size for better visibility */
        height: 28px;
        margin-right: 10px; /* Space between icon and text */
        /* Ensure images scale correctly */
        object-fit: contain;
        background-color: transparent !important;
      }

      /* Secondary Button Style */
      .custom-button.secondary {
        background-color: var(--bg-end);
        color: var(--primary);
        border: 1px solid var(--primary);
      }

      /* Adjust icon color for the secondary button style */
      .custom-button.secondary .store-icon {
        background-color: var(--primary);
      }

      /* --- LAYOUT & MAIN SECTIONS --- */

      .container {
        width: 100%;
        max-width: 1200px;
        padding-top: 40px;
      }

      /* HEADER/HERO SECTION */
      .hero {
        text-align: center;
        padding: 40px 20px;
      }

      .logo-img {
        width: 160px;
        height: 160px;
        margin-bottom: 20px;
        border-radius: 15px; /* Added rounded corners to logo */
      }

      .hero h1 {
        font-size: 64px;
        font-weight: 900;
        color: var(--primary);
        margin-bottom: 10px;
        line-height: 1;
        letter-spacing: -1px;
      }

      .hero p {
        font-size: 24px;
        color: var(--text-secondary);
        margin-bottom: 40px;
      }

      .cta-buttons {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        width: 100%;
        max-width: 340px;
        margin: 0 auto;
      }

      /* --- NEW: UNIFIED FEATURE SHOWCASE --- */

      .showcase-block {
        padding: 60px 20px;
        max-width: 1000px;
        margin: 0 auto;
      }

      .showcase-block h2 {
        font-size: 44px;
        text-align: center;
        color: var(--primary);
        margin-bottom: 60px;
        font-weight: bold;
      }

      .feature-pair {
        display: flex;
        align-items: center;
        gap: 50px;
        width: 100%;
        margin-bottom: 80px;
        padding: 30px;
        /* Using glass-card styling for the container to maintain cohesion */
        background-color: rgba(255, 255, 255, 0.03);
        border-radius: 30px;
      }

      .feature-pair.reverse {
        flex-direction: row-reverse;
      }

      .feature-text {
        flex: 1;
        min-width: 300px;
        padding: 20px 0;
      }

      .feature-text h3 {
        font-size: 32px;
        color: var(--primary);
        margin-bottom: 15px;
        font-weight: 800;
        border-left: 4px solid var(--accent);
        padding-left: 15px;
        line-height: 1.2;
      }

      .feature-text p {
        color: var(--text-secondary);
        font-size: 18px;
        line-height: 1.7;
      }

      .feature-image {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .feature-image img {
        width: 100%;
        max-width: 350px; /* Standard mobile width */
        height: auto;
        display: block;
        border-radius: 24px;
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.6);
        transition: transform 0.3s ease;
        border: 8px solid var(--bg-start); /* Mock phone bezel */
        cursor: zoom-in;
      }

      .feature-image img:hover {
        transform: scale(1.02);
      }

      /* FOOTER */
      .footer {
        width: 100%;
        padding: 20px;
        text-align: center;
        margin-top: 40px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
      }

      .footer p {
        font-size: 14px;
        color: var(--text-secondary);
        margin-bottom: 10px;
      }

      .footer-links a {
        margin: 0 10px;
        font-size: 14px;
      }

      /* Media Queries for smaller screens */
      @media (max-width: 768px) {
        .hero h1 {
          font-size: 50px;
        }
        .hero p {
          font-size: 20px;
        }
        .feature-pair,
        .feature-pair.reverse {
          flex-direction: column;
          text-align: center;
          padding: 20px;
        }
        .feature-text {
          order: 2; /* Put text below image on mobile */
          text-align: left; /* Keep text readable */
        }
        .feature-image {
          order: 1;
          margin-bottom: 10px;
        }
        .feature-image img {
          max-width: 280px;
        }
        .feature-text h3 {
          margin-top: 10px;
          border-left: none; /* Remove left border on mobile for centered text */
          padding-left: 0;
          text-align: center;
        }
        .feature-text p {
          text-align: left;
        }
      }
    </style>
